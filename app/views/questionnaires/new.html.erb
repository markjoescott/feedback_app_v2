<div class="page-header">
  <h1>Add Questionnaire</h1>
</div>

<% if @questionnaire.errors.any? %>
  <% @questionnaire.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_questionnaire" class="form-horizontal">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id" class="col-sm-2 control-label">
      User
    </label>
    <div class="col-sm-10">
      <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @questionnaire.user_id %>">
    </div>
  </div>

  <!-- Label and input for respondent_id -->
  <div class="form-group">
    <label for="respondent_id" class="col-sm-2 control-label">
      Respondent
    </label>
    <div class="col-sm-10">
      <input type="text" id="respondent_id" name="respondent_id" placeholder="Respondent" class="form-control" value="<%= @questionnaire.respondent_id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Questionnaire" class="btn btn-primary">
    </div>
  </div>
</form>
