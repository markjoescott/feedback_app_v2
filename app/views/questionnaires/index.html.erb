<div class="page-header">
  <h1>Questionnaires</h1>
</div>

<p><a href="/questionnaires/new" class="btn btn-primary">Add a New Questionnaire</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Respondent</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @questionnaires.each do |questionnaire| %>
      <tr>
        <td><%= questionnaire.user_id %></td>
        <td><%= questionnaire.respondent_id %></td>
        <td>
          <a href="/questionnaires/<%= questionnaire.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/questionnaires/<%= questionnaire.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_questionnaire/<%= questionnaire.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

